---
import '../styles/global.css'
import Nav from '../components/Nav.astro'

interface Props {
  title?: string
  description?: string
}

const {
  title = 'VibeCoder Learn',
  description = '从零到编排者：AI 时代的软件构建课程'
} = Astro.props
---

<!doctype html>
<html lang="zh-CN">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <meta name="description" content={description} />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700&family=Noto+Sans+SC:wght@400;500;700&family=Roboto+Mono:wght@400;500;700&display=swap" rel="stylesheet" />
    <title>{title}</title>
  </head>
  <body class="grain min-h-screen font-sans">
    <Nav />
    <main class="max-w-5xl mx-auto px-4 sm:px-6 py-8">
      <slot />
    </main>
    <footer class="max-w-5xl mx-auto px-4 sm:px-6 py-12 border-t border-light-beige">
      <div class="flex flex-col sm:flex-row justify-between items-center gap-4 text-sm text-warm-gray">
        <p class="font-mono">VibeCoder Learn &copy; 2026</p>
        <a
          href="https://github.com/koriyoshi2041/vibecoder-learn"
          target="_blank"
          rel="noopener"
          class="hover:text-rust transition-colors"
        >
          GitHub ↗
        </a>
      </div>
    </footer>
  </body>
</html>
