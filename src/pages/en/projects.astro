---
import Layout from '../../layouts/Layout.astro'
import { projects } from '../../data/projects.en'
import { t } from '../../i18n'

const locale = 'en' as const

const stageColors = {
  observer: { bg: 'bg-sage-light', text: 'text-sage', border: 'border-sage/20' },
  practitioner: { bg: 'bg-cream/30', text: 'text-terracotta', border: 'border-terracotta/20' },
  critic: { bg: 'bg-dusty-rose-light', text: 'text-dusty-rose', border: 'border-dusty-rose/20' },
  creator: { bg: 'bg-paper-dark', text: 'text-rust', border: 'border-rust/20' },
} as const
---

<Layout title="Main Projects â€” VibeCoder Learn" locale={locale}>
  <div class="max-w-6xl mx-auto px-6 sm:px-8 py-8 sm:py-12">
    <!-- Page Header -->
    <div class="gsap-fade-up mb-12 sm:mb-16">
      <span class="section-line gsap-line-expand mb-4 block" />
      <p class="font-mono text-[11px] text-rust tracking-[0.2em] uppercase mb-3">{t('projects.label', locale)}</p>
      <h1 class="font-serif text-3xl sm:text-4xl lg:text-5xl font-bold text-charcoal mb-3">{t('projects.title', locale)}</h1>
      <p class="text-charcoal-light text-lg">{t('projects.subtitle', locale)}</p>
    </div>

    <div class="gsap-stagger space-y-6 sm:space-y-8">
      {projects.map((project) => {
        const colors = stageColors[project.stage as keyof typeof stageColors]
        return (
          <div class={`gsap-stagger-item project-card rounded-xl p-7 sm:p-8 border ${colors.border} ${colors.bg}`}>
            <div class="flex items-start justify-between mb-4">
              <div>
                <div class="flex items-center gap-3 mb-2">
                  <span class={`font-mono text-xs font-bold ${colors.text}`}>{project.id}</span>
                  <span class="text-[11px] text-warm-gray font-mono tracking-wide">{project.weeks}</span>
                </div>
                <h2 class="font-serif text-xl sm:text-2xl font-bold text-charcoal">{project.title}</h2>
                <p class="text-sm text-warm-gray mt-1">{project.subtitle}</p>
              </div>
              <span class={`text-5xl sm:text-6xl font-bold font-mono ${colors.text} opacity-10 leading-none`}>
                {String(project.number).padStart(2, '0')}
              </span>
            </div>

            <p class="text-sm text-charcoal-light mb-6 leading-relaxed max-w-2xl">{project.description}</p>

            <div class="grid grid-cols-1 sm:grid-cols-2 gap-6">
              <div>
                <p class="text-[10px] font-mono text-warm-gray tracking-[0.15em] uppercase mb-3">{t('projects.skills', locale)}</p>
                <div class="flex flex-wrap gap-2">
                  {project.skills.map(skill => (
                    <span class="px-2.5 py-1 bg-paper rounded-md text-xs text-charcoal-light border border-light-beige/80">
                      {skill}
                    </span>
                  ))}
                </div>
              </div>
              <div>
                <p class="text-[10px] font-mono text-warm-gray tracking-[0.15em] uppercase mb-3">{t('projects.deliverables', locale)}</p>
                <ul class="space-y-1.5">
                  {project.deliverables.map(d => (
                    <li class="text-sm text-charcoal-light flex items-center gap-2">
                      <span class="w-1 h-1 rounded-full bg-warm-gray/60 shrink-0" />
                      {d}
                    </li>
                  ))}
                </ul>
              </div>
            </div>
          </div>
        )
      })}
    </div>

    <!-- Capability Model -->
    <div class="gsap-fade-up mt-16 sm:mt-20 rounded-xl p-7 sm:p-8 bg-paper border border-light-beige">
      <div class="mb-6">
        <span class="section-line gsap-line-expand mb-3 block" />
        <h2 class="font-serif text-xl sm:text-2xl font-bold text-charcoal">{t('projects.capability', locale)}</h2>
      </div>
      <div class="space-y-3 font-mono text-sm">
        <div class="flex items-center gap-4 p-4 rounded-lg bg-paper-dark">
          <span class="text-rust font-bold w-8 text-right text-lg">L4</span>
          <div class="flex-1">
            <span class="font-bold text-charcoal">{t('projects.l4.name', locale)}</span>
            <span class="text-warm-gray ml-2">{t('projects.l4.desc', locale)}</span>
          </div>
        </div>
        <div class="flex items-center gap-4 p-4 rounded-lg bg-dusty-rose-light">
          <span class="text-dusty-rose font-bold w-8 text-right text-lg">L3</span>
          <div class="flex-1">
            <span class="font-bold text-charcoal">{t('projects.l3.name', locale)}</span>
            <span class="text-warm-gray ml-2">{t('projects.l3.desc', locale)}</span>
          </div>
        </div>
        <div class="flex items-center gap-4 p-4 rounded-lg bg-cream/30">
          <span class="text-terracotta font-bold w-8 text-right text-lg">L2</span>
          <div class="flex-1">
            <span class="font-bold text-charcoal">{t('projects.l2.name', locale)}</span>
            <span class="text-warm-gray ml-2">{t('projects.l2.desc', locale)}</span>
          </div>
        </div>
        <div class="flex items-center gap-4 p-4 rounded-lg bg-sage-light">
          <span class="text-sage font-bold w-8 text-right text-lg">L1</span>
          <div class="flex-1">
            <span class="font-bold text-charcoal">{t('projects.l1.name', locale)}</span>
            <span class="text-warm-gray ml-2">{t('projects.l1.desc', locale)}</span>
          </div>
        </div>
      </div>
    </div>
  </div>
</Layout>
