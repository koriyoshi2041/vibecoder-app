---
import Layout from '../../layouts/Layout.astro'
import { projects } from '../../data/projects.en'
import { t } from '../../i18n'

const locale = 'en' as const

const stageColors = {
  observer: { bg: 'bg-sage-light', text: 'text-sage', border: 'border-sage/30' },
  practitioner: { bg: 'bg-cream/30', text: 'text-terracotta', border: 'border-terracotta/30' },
  critic: { bg: 'bg-dusty-rose-light', text: 'text-dusty-rose', border: 'border-dusty-rose/30' },
  creator: { bg: 'bg-paper-dark', text: 'text-rust', border: 'border-rust/30' },
} as const
---

<Layout title="Main Projects â€” VibeCoder Learn" locale={locale}>
  <section class="py-4 sm:py-8">
    <p class="font-mono text-sm text-rust mb-2 tracking-wide">{t('projects.label', locale)}</p>
    <h1 class="text-2xl sm:text-3xl font-bold text-charcoal mb-2">{t('projects.title', locale)}</h1>
    <p class="text-charcoal-light mb-8">{t('projects.subtitle', locale)}</p>

    <div class="space-y-6">
      {projects.map((project) => {
        const colors = stageColors[project.stage as keyof typeof stageColors]
        return (
          <div class={`rounded-lg p-6 border ${colors.border} ${colors.bg} hover:shadow-[3px_3px_0_rgba(41,41,41,0.08)] transition-all`}>
            <div class="flex items-start justify-between mb-3">
              <div>
                <div class="flex items-center gap-2 mb-1">
                  <span class={`font-mono text-xs font-bold ${colors.text}`}>{project.id}</span>
                  <span class="text-xs text-warm-gray font-mono">{project.weeks}</span>
                </div>
                <h2 class="text-xl font-bold text-charcoal">{project.title}</h2>
                <p class="text-sm text-warm-gray">{project.subtitle}</p>
              </div>
              <span class={`text-4xl font-bold font-mono ${colors.text} opacity-20`}>
                {String(project.number).padStart(2, '0')}
              </span>
            </div>

            <p class="text-sm text-charcoal-light mb-4 leading-relaxed">{project.description}</p>

            <div class="grid grid-cols-1 sm:grid-cols-2 gap-4">
              <div>
                <p class="text-xs font-mono text-warm-gray mb-2">{t('projects.skills', locale)}</p>
                <div class="flex flex-wrap gap-1.5">
                  {project.skills.map(skill => (
                    <span class="px-2 py-0.5 bg-paper rounded text-xs text-charcoal-light border border-light-beige">
                      {skill}
                    </span>
                  ))}
                </div>
              </div>
              <div>
                <p class="text-xs font-mono text-warm-gray mb-2">{t('projects.deliverables', locale)}</p>
                <ul class="space-y-1">
                  {project.deliverables.map(d => (
                    <li class="text-sm text-charcoal-light flex items-center gap-1.5">
                      <span class="w-1 h-1 rounded-full bg-warm-gray shrink-0"></span>
                      {d}
                    </li>
                  ))}
                </ul>
              </div>
            </div>
          </div>
        )
      })}
    </div>

    {/* Capability Model */}
    <div class="mt-12 rounded-lg p-6 bg-paper border border-light-beige">
      <h2 class="text-lg font-bold text-charcoal mb-4">{t('projects.capability', locale)}</h2>
      <div class="space-y-3 font-mono text-sm">
        <div class="flex items-center gap-3 p-3 rounded bg-paper-dark">
          <span class="text-rust font-bold w-6 text-right">L4</span>
          <div class="flex-1">
            <span class="font-bold text-charcoal">{t('projects.l4.name', locale)}</span>
            <span class="text-warm-gray ml-2">{t('projects.l4.desc', locale)}</span>
          </div>
        </div>
        <div class="flex items-center gap-3 p-3 rounded bg-dusty-rose-light">
          <span class="text-dusty-rose font-bold w-6 text-right">L3</span>
          <div class="flex-1">
            <span class="font-bold text-charcoal">{t('projects.l3.name', locale)}</span>
            <span class="text-warm-gray ml-2">{t('projects.l3.desc', locale)}</span>
          </div>
        </div>
        <div class="flex items-center gap-3 p-3 rounded bg-cream/30">
          <span class="text-terracotta font-bold w-6 text-right">L2</span>
          <div class="flex-1">
            <span class="font-bold text-charcoal">{t('projects.l2.name', locale)}</span>
            <span class="text-warm-gray ml-2">{t('projects.l2.desc', locale)}</span>
          </div>
        </div>
        <div class="flex items-center gap-3 p-3 rounded bg-sage-light">
          <span class="text-sage font-bold w-6 text-right">L1</span>
          <div class="flex-1">
            <span class="font-bold text-charcoal">{t('projects.l1.name', locale)}</span>
            <span class="text-warm-gray ml-2">{t('projects.l1.desc', locale)}</span>
          </div>
        </div>
      </div>
    </div>
  </section>
</Layout>
