---
import Layout from '../../layouts/Layout.astro'
import ProgressDashboard from '../../components/ProgressDashboard'
import StageCard from '../../components/StageCard'
import AnimatedStat from '../../components/AnimatedStat'
import { stages } from '../../data/weeks.en'
import { t } from '../../i18n'

const locale = 'en' as const
---

<Layout title="VibeCoder Learn — Software Building for the AI Era" locale={locale} fullBleed>

  <!-- ═══ HERO ═══ -->
  <section class="hero-section ink-wash-hero">
    <div class="hero-content relative z-10 max-w-6xl mx-auto px-6 sm:px-8">
      <!-- Overline -->
      <div class="mb-6 sm:mb-8">
        <span class="hero-meta inline-block font-mono text-[11px] text-rust tracking-[0.25em] uppercase border-b border-rust/20 pb-1.5">
          {t('home.subtitle', locale)}
        </span>
      </div>

      <!-- Title -->
      <h1
        class="hero-title font-serif text-[clamp(3rem,8vw,7rem)] font-bold text-charcoal leading-[1.08] mb-8 sm:mb-10"
        style="perspective: 600px"
        aria-label={t('home.title', locale)}
      >
        {['From', 'Zero'].map((word, i) => (
          <span class="char inline-block mr-[0.25em]" style={`--i:${i}`}>{word}</span>
        ))}
        <br />
        {['to', 'Orchestrator'].map((word, i) => (
          <span class="char inline-block mr-[0.25em]" style={`--i:${i + 2}`}>{word}</span>
        ))}
      </h1>

      <!-- Subtitle -->
      <div class="hero-subtitle max-w-xl mb-4">
        <p class="text-lg sm:text-xl text-charcoal-light leading-relaxed">
          {t('home.desc', locale)}
        </p>
        <p class="text-lg sm:text-xl text-charcoal leading-relaxed font-medium">
          <span class="text-rust">{t('home.desc.bold', locale)}</span>.
        </p>
      </div>

      <!-- Meta -->
      <div class="hero-meta flex flex-wrap items-center gap-x-5 gap-y-2 font-mono text-sm text-warm-gray mt-8 sm:mt-12">
        <span>{t('home.meta', locale)}</span>
      </div>
    </div>

    <!-- Scroll Indicator -->
    <div class="scroll-indicator-wrapper absolute bottom-8 sm:bottom-12 left-1/2 -translate-x-1/2 flex flex-col items-center gap-2">
      <span class="font-mono text-[10px] text-warm-gray/60 tracking-[0.3em] uppercase">Scroll</span>
      <div class="w-px h-10 bg-gradient-to-b from-rust/60 to-transparent scroll-line-anim" />
    </div>
  </section>

  <!-- ═══ PHILOSOPHY ═══ -->
  <section class="py-20 sm:py-28">
    <div class="max-w-4xl mx-auto px-6 sm:px-8 text-center">
      <div class="section-line-center gsap-line-expand mb-10 sm:mb-14" />
      <blockquote class="gsap-fade-up font-serif text-2xl sm:text-3xl lg:text-4xl text-charcoal leading-relaxed">
        "Taste is not a talent&mdash;<br class="hidden sm:inline"/>it is <span class="text-rust font-bold">trained</span>."
      </blockquote>
      <div class="section-line-center gsap-line-expand mt-10 sm:mt-14" />
    </div>
  </section>

  <!-- ═══ DASHBOARD ═══ -->
  <section class="pb-16 sm:pb-20">
    <div class="max-w-6xl mx-auto px-6 sm:px-8">
      <div class="gsap-fade-up mb-8">
        <span class="section-line gsap-line-expand mb-4 block" />
        <h2 class="font-mono text-[10px] text-warm-gray tracking-[0.2em] uppercase">{t('home.progress', locale)}</h2>
      </div>
      <div class="gsap-fade-up">
        <ProgressDashboard client:visible locale="en" />
      </div>
    </div>
  </section>

  <!-- ═══ 4 STAGES ═══ -->
  <section class="py-16 sm:py-24 ink-wash-subtle">
    <div class="max-w-6xl mx-auto px-6 sm:px-8">
      <div class="gsap-fade-up mb-10 sm:mb-14">
        <span class="section-line gsap-line-expand mb-4 block" />
        <h2 class="font-serif text-2xl sm:text-3xl font-bold text-charcoal">{t('home.stages', locale)}</h2>
        <p class="text-sm text-warm-gray mt-2">From observation to creation, build your AI orchestration skills step by step</p>
      </div>
      <div class="gsap-stagger grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-4 gap-5">
        {stages.map((stage) => (
          <div class="gsap-stagger-item">
            <StageCard
              client:visible
              id={stage.id}
              label={stage.label}
              weeks={stage.weeks}
              color={stage.color}
              icon={stage.icon}
              description={stage.description}
              locale="en"
            />
          </div>
        ))}
      </div>
    </div>
  </section>

  <!-- ═══ KEY STATS ═══ -->
  <section class="py-16 sm:py-24 bg-paper-dark">
    <div class="max-w-6xl mx-auto px-6 sm:px-8">
      <div class="gsap-fade-up mb-10 sm:mb-14 text-center">
        <span class="section-line-center gsap-line-expand mb-4 block" />
        <h2 class="font-serif text-2xl sm:text-3xl font-bold text-charcoal">{t('home.stats', locale)}</h2>
      </div>
      <div class="gsap-stagger grid grid-cols-1 sm:grid-cols-3 gap-6 sm:gap-8">
        <div class="gsap-stagger-item">
          <AnimatedStat
            client:visible
            value={45}
            suffix="%"
            color="dusty-rose"
            label={t('home.stat1.desc', locale)}
            sublabel={t('home.stat1.source', locale)}
          />
        </div>
        <div class="gsap-stagger-item">
          <AnimatedStat
            client:visible
            value={80}
            suffix="%"
            color="sage"
            label={t('home.stat2.desc', locale)}
            sublabel={t('home.stat2.source', locale)}
          />
        </div>
        <div class="gsap-stagger-item">
          <AnimatedStat
            client:visible
            value={19}
            suffix="%"
            color="bronze"
            label={t('home.stat3.desc', locale)}
            sublabel={t('home.stat3.source', locale)}
          />
        </div>
      </div>
    </div>
  </section>

  <!-- ═══ EXPLORE ═══ -->
  <section class="py-16 sm:py-24">
    <div class="max-w-6xl mx-auto px-6 sm:px-8">
      <div class="gsap-fade-up mb-10 sm:mb-14">
        <span class="section-line gsap-line-expand mb-4 block" />
        <h2 class="font-serif text-2xl sm:text-3xl font-bold text-charcoal">{t('home.explore', locale)}</h2>
      </div>
      <div class="gsap-stagger grid grid-cols-1 sm:grid-cols-3 gap-6">
        <a href="/en/path" class="gsap-stagger-item explore-card group bg-paper rounded-xl p-7 sm:p-8 border border-light-beige">
          <p class="font-mono text-[10px] text-rust tracking-[0.15em] mb-4">{t('home.link.path.label', locale)}</p>
          <h3 class="font-serif text-xl font-bold text-charcoal group-hover:text-rust transition-colors mb-3">{t('home.link.path.title', locale)}</h3>
          <p class="text-sm text-warm-gray leading-relaxed mb-6">{t('home.link.path.desc', locale)}</p>
          <span class="inline-flex items-center gap-2 text-xs font-mono text-rust opacity-0 group-hover:opacity-100 transition-all duration-300 group-hover:translate-x-1">
            Explore
            <svg class="w-3.5 h-3.5" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2"><path stroke-linecap="round" stroke-linejoin="round" d="M17 8l4 4m0 0l-4 4m4-4H3" /></svg>
          </span>
        </a>
        <a href="/en/challenges" class="gsap-stagger-item explore-card group bg-paper rounded-xl p-7 sm:p-8 border border-light-beige">
          <p class="font-mono text-[10px] text-rust tracking-[0.15em] mb-4">{t('home.link.challenges.label', locale)}</p>
          <h3 class="font-serif text-xl font-bold text-charcoal group-hover:text-rust transition-colors mb-3">{t('home.link.challenges.title', locale)}</h3>
          <p class="text-sm text-warm-gray leading-relaxed mb-6">{t('home.link.challenges.desc', locale)}</p>
          <span class="inline-flex items-center gap-2 text-xs font-mono text-rust opacity-0 group-hover:opacity-100 transition-all duration-300 group-hover:translate-x-1">
            Explore
            <svg class="w-3.5 h-3.5" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2"><path stroke-linecap="round" stroke-linejoin="round" d="M17 8l4 4m0 0l-4 4m4-4H3" /></svg>
          </span>
        </a>
        <a href="/en/projects" class="gsap-stagger-item explore-card group bg-paper rounded-xl p-7 sm:p-8 border border-light-beige">
          <p class="font-mono text-[10px] text-rust tracking-[0.15em] mb-4">{t('home.link.projects.label', locale)}</p>
          <h3 class="font-serif text-xl font-bold text-charcoal group-hover:text-rust transition-colors mb-3">{t('home.link.projects.title', locale)}</h3>
          <p class="text-sm text-warm-gray leading-relaxed mb-6">{t('home.link.projects.desc', locale)}</p>
          <span class="inline-flex items-center gap-2 text-xs font-mono text-rust opacity-0 group-hover:opacity-100 transition-all duration-300 group-hover:translate-x-1">
            Explore
            <svg class="w-3.5 h-3.5" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2"><path stroke-linecap="round" stroke-linejoin="round" d="M17 8l4 4m0 0l-4 4m4-4H3" /></svg>
          </span>
        </a>
      </div>
    </div>
  </section>

</Layout>
